root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.cs]
indent_size = 4

# CA1031: Não capturar exceptions de tipos genéricos
dotnet_diagnostic.CA1031.severity = silent

# CA1307: Especificar StringComparison
dotnet_diagnostic.CA1307.severity = none

# CA2234: Passar objetos do URI do sistema em vez de cadeias de caracteres
dotnet_diagnostic.CA2234.severity = none

# CA1305: Especificar IFormatProvider
dotnet_diagnostic.CA1305.severity = none

# CA1707: Identificadores não devem conter sublinhados
dotnet_diagnostic.CA1707.severity = none

[*.{js,json,vue}]
indent_size = 2